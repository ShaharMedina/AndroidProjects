<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.itai.ex_3.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phraseLabel"
        android:layout_marginTop="116dp"
        android:textSize="30dp"
        android:password="false"
        android:text="@string/phraseLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:id="@+id/phraseText"
        android:foreground="#fbfbfb"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phraseText"
        android:id="@+id/button"
        android:textSize="25dp"
        android:layout_below="@+id/phraseText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:singleLine="true"
        android:onClick="onReadTextClick"/>
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/radioEnglish"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/phraseLabel"
        android:layout_alignStart="@+id/phraseLabel"
        android:layout_marginTop="58dp"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="French"
        android:id="@+id/radioFrench"
        android:layout_below="@+id/radioEnglish"
        android:layout_alignLeft="@+id/radioEnglish"
        android:layout_alignStart="@+id/radioEnglish"
        android:checked="false" />
    </RadioGroup>

</RelativeLayout>
